# Test environment configuration
# Used for automated testing (CI/CD and local test runs)
SERVER_PORT=5000
NODE_ENV=test

FRONTEND_URL=http://localhost:3000
WEBSITE_URL=http://localhost:3000/

# Test database configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_DB=test_db

# JWT Configuration - Test values (not sensitive)
JWT_TOKEN_SECRET=test_secret_key_for_jwt_token
JWT_EXP_IN=1h
JWT_REFRESH_TOKEN_SECRET=test_secret_key_for_refresh_token
JWT_REFRESH_EXP_IN=7d
JWT_RESET_PSWD_SECRET=test_secret_key_for_password_reset
JWT_RESET_PSWD_EXP_IN=1h

# Rate Limiting Configuration - Optimized for testing (faster windows)
# Auth endpoints (login/signup) - protects against brute force attacks
RATE_LIMIT_AUTH_WINDOW_MS=60000
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# Password reset endpoints - stricter limit for sensitive operations
RATE_LIMIT_PASSWORD_RESET_WINDOW_MS=60000
RATE_LIMIT_PASSWORD_RESET_MAX_REQUESTS=3

# Token refresh endpoints - moderate limit
RATE_LIMIT_TOKEN_REFRESH_WINDOW_MS=60000
RATE_LIMIT_TOKEN_REFRESH_MAX_REQUESTS=10

# General API endpoints - broader limit for normal operations
RATE_LIMIT_API_WINDOW_MS=60000
RATE_LIMIT_API_MAX_REQUESTS=100
